.loading
	circ(4rem)
	color $magenta
	overflow hidden
	pointer-events none
	position relative
	
	&::before
		animation 1s cubic-bezier(0,1.17,.66,-0.43) alternate running infinite
		animation-name zoomInOut
		border 4px solid white
		circ(90%)
		content ''
		display block
		left 5%
		position absolute
		top 5%
		transitionBase()