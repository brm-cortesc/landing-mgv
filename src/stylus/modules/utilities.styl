.clearfix
	clearfix()

.text
	&-center
		text-align center
		
	&-copy
		margin 1rem auto
		max-width 44rem
		
		span
			display block
			font-size 140%
		
	&-copy-sm
		font-size 1.6rem
		margin 0 auto 1rem 
		max-width 29rem
		

	&-justify
		text-align justify
		text-align-last left
	&-left
		text-align left
		

.title
		
	&-social
		color $azul
		font-size 1.8rem
		font-weight $light
		line-height 1.1
		margin 1rem auto
		text-align center
		text-transform uppercase
		transitionBase()
		
		strong
			display block
			font-size 140%
			transitionBase()
			

.word
	&-welcome
		font-size 120%
		font-weight  $bold
		

@media (min-width:$screen-sm)
	// .text
