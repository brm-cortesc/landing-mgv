&::selection /* WebKit/Blink Browsers */
	background $magenta
	color #fff
	text-shadow 0px 0px 5px rgba(255, 255, 255, .75)

&::-moz-selection /* Gecko Browsers */
	background $magenta
	color #fff
	text-shadow 0px 0px 5px rgba(255, 255, 255, .75)
	


a
	color $azul
	text-decoration none
	transitionBase()
	
	&:hover
		text-decoration underline
		
	img
		border 0
	
body
	color $gris
	font-family $font-stack
	font-size 1.4rem
	path('layout/bg.jpg')

h1, h2, h3, h4, h5, h6
	font-weight $bold
	


h1
	font-size 1.8rem
	font-weight $light

input,
select,
textarea
	&:active,
	&:focus
		outline none !important
		outline 0 !important

input
	&[type="number"]
		appearance none
		&::-webkit-inner-spin-button,
		&::-webkit-outer-spin-button
			appearance none
			margin 0

p,
label
	margin-bottom 0

strong, b
	font-weight $bold



